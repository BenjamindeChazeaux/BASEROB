            <div style="background: rgba(51, 51, 51, 0.1); width: 32px; height: 32px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-users" style="color: var(--primary-color);"></i>
            </div>
          </div>
          <div style="display: flex; align-items: baseline;">
            <span style="font-size: 24px; font-weight: 600; color: var(--text-primary);">12,543</span>
            <span style="margin-left: 8px; font-size: 13px; color: #4CAF50; display: flex; align-items: center;">
              <i class="fas fa-arrow-up" style="font-size: 10px; margin-right: 4px;"></i>12.3%
            </span>
          </div>
          <p style="font-size: 13px; color: var(--text-secondary); margin-top: 4px;">vs previous period</p>
        </div>

        <div class="metric-card" style="background: white; border-radius: 12px; padding: 20px; box-shadow: var(--card-shadow);">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
            <h3 style="font-size: 14px; color: var(--text-secondary); font-weight: 500;">AI Bot Visits</h3>
            <div style="background: rgba(51, 51, 51, 0.1); width: 32px; height: 32px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-robot" style="color: var(--primary-color);"></i>
            </div>
          </div>
          <div style="display: flex; align-items: baseline;">
            <span style="font-size: 24px; font-weight: 600; color: var(--text-primary);">4,387</span>
            <span style="margin-left: 8px; font-size: 13px; color: #4CAF50; display: flex; align-items: center;">
              <i class="fas fa-arrow-up" style="font-size: 10px; margin-right: 4px;"></i>18.7%
            </span>
          </div>
          <p style="font-size: 13px; color: var(--text-secondary); margin-top: 4px;">vs previous period</p>
        </div>

        <div class="metric-card" style="background: white; border-radius: 12px; padding: 20px; box-shadow: var(--card-shadow);">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
            <h3 style="font-size: 14px; color: var(--text-secondary); font-weight: 500;">Human Visits</h3>
            <div style="background: rgba(51, 51, 51, 0.1); width: 32px; height: 32px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-user" style="color: var(--primary-color);"></i>
            </div>
          </div>
          <div style="display: flex; align-items: baseline;">
            <span style="font-size: 24px; font-weight: 600; color: var(--text-primary);">8,156</span>
            <span style="margin-left: 8px; font-size: 13px; color: #4CAF50; display: flex; align-items: center;">
              <i class="fas fa-arrow-up" style="font-size: 10px; margin-right: 4px;"></i>9.2%
            </span>
          </div>
          <p style="font-size: 13px; color: var(--text-secondary); margin-top: 4px;">vs previous period</p>
        </div>

        <div class="metric-card" style="background: white; border-radius: 12px; padding: 20px; box-shadow: var(--card-shadow);">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
            <h3 style="font-size: 14px; color: var(--text-secondary); font-weight: 500;">Bounce Rate</h3>
            <div style="background: rgba(51, 51, 51, 0.1); width: 32px; height: 32px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-percentage" style="color: var(--primary-color);"></i>
            </div>
          </div>
          <div style="display: flex; align-items: baseline;">
            <span style="font-size: 24px; font-weight: 600; color: var(--text-primary);">42.5%</span>
            <span style="margin-left: 8px; font-size: 13px; color: #F44336; display: flex; align-items: center;">
              <i class="fas fa-arrow-up" style="font-size: 10px; margin-right: 4px;"></i>3.1%
            </span>
          </div>
          <p style="font-size: 13px; color: var(--text-secondary); margin-top: 4px;">vs previous period</p>
        </div>
      </div>

      <!-- Charts Row -->
      <div class="charts-row" style="display: grid; grid-template-columns: 2fr 1fr; gap: 24px; margin-bottom: 24px;">
        <!-- Main Chart -->
        <div class="chart-card" style="background: white; border-radius: 12px; padding: 24px; box-shadow: var(--card-shadow);">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h3 style="font-size: 16px; font-weight: 600; color: var(--text-primary);">Traffic Overview</h3>
            <div class="chart-controls" style="display: flex; gap: 8px;">
              <button style="background: #f5f5f7; border: none; padding: 6px 12px; border-radius: 6px; font-size: 13px; color: var(--text-secondary);">Day</button>
              <button style="background: #f5f5f7; border: none; padding: 6px 12px; border-radius: 6px; font-size: 13px; color: var(--text-secondary);">Week</button>
              <button style="background: var(--primary-color); border: none; padding: 6px 12px; border-radius: 6px; font-size: 13px; color: white;">Month</button>
              <button style="background: #f5f5f7; border: none; padding: 6px 12px; border-radius: 6px; font-size: 13px; color: var(--text-secondary);">Year</button>
            </div>
          </div>
          <div style="height: 300px;">
            <canvas id="trafficChart"></canvas>
          </div>
        </div>

        <!-- Pie Chart -->
        <div class="chart-card" style="background: white; border-radius: 12px; padding: 24px; box-shadow: var(--card-shadow);">
          <h3 style="font-size: 16px; font-weight: 600; color: var(--text-primary); margin-bottom: 20px;">Traffic Sources</h3>
          <div style="height: 300px; display: flex; justify-content: center; align-items: center;">
            <canvas id="visitsChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Bottom Section -->
      <div class="bottom-section" style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
        <!-- AI Bot Performance -->
        <div class="performance-card" style="background: white; border-radius: 12px; padding: 24px; box-shadow: var(--card-shadow);">
          <h3 style="font-size: 16px; font-weight: 600; color: var(--text-primary); margin-bottom: 20px;">AI Bot Performance</h3>
          
          <div class="performance-metrics" style="margin-bottom: 24px;">
            <div class="metric-item" style="margin-bottom: 16px;">
              <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                <span style="font-size: 13px; font-weight: 500;">Crawling Efficiency</span>
                <span style="font-size: 13px; font-weight: 600;">78%</span>
              </div>
              <div style="height: 8px; background: #f5f5f7; border-radius: 4px; overflow: hidden;">
                <div style="height: 100%; width: 78%; background: var(--primary-color);"></div>
              </div>
            </div>
            
            <div class="metric-item" style="margin-bottom: 16px;">
              <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                <span style="font-size: 13px; font-weight: 500;">Data Quality</span>
                <span style="font-size: 13px; font-weight: 600;">92%</span>
              </div>
              <div style="height: 8px; background: #f5f5f7; border-radius: 4px; overflow: hidden;">
                <div style="height: 100%; width: 92%; background: var(--primary-color);"></div>
              </div>
            </div>
            
            <div class="metric-item">
              <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                <span style="font-size: 13px; font-weight: 500;">Processing Speed</span>
                <span style="font-size: 13px; font-weight: 600;">85%</span>
              </div>
              <div style="height: 8px; background: #f5f5f7; border-radius: 4px; overflow: hidden;">
                <div style="height: 100%; width: 85%; background: var(--primary-color);"></div>
              </div>
            </div>
          </div>
          
          <div class="action-row" style="display: flex; justify-content: center;">
            <button class="action-button" style="width: auto; padding: 0 16px; border-radius: 8px; height: 40px;">
              View Detailed Report
            </button>
          </div>
        </div>
        
        <!-- Recent Activity -->
        <div class="activity-card" style="background: white; border-radius: 12px; padding: 24px; box-shadow: var(--card-shadow);">
          <h3 style="font-size: 16px; font-weight: 600; color: var(--text-primary); margin-bottom: 20px;">Recent Activity</h3>
          
          <div class="activity-list">
            <div class="activity-item" style="display: flex; align-items: center; padding: 12px 0; border-bottom: 1px solid #f5f5f7;">
              <div style="width: 40px; height: 40px; background: rgba(51, 51, 51, 0.1); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                <i class="fas fa-robot" style="color: var(--primary-color);"></i>
              </div>
              <div style="flex-grow: 1;">
                <p style="font-size: 14px; font-weight: 500; margin-bottom: 4px;">AI Bot crawled 28 new pages</p>
                <p style="font-size: 13px; color: var(--text-secondary);">Today, 10:23 AM</p>
              </div>
            </div>
            
            <div class="activity-item" style="display: flex; align-items: center; padding: 12px 0; border-bottom: 1px solid #f5f5f7;">
              <div style="width: 40px; height: 40px; background: rgba(51, 51, 51, 0.1); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                <i class="fas fa-chart-line" style="color: var(--primary-color);"></i>
              </div>
              <div style="flex-grow: 1;">
                <p style="font-size: 14px; font-weight: 500; margin-bottom: 4px;">Monthly report generated</p>
                <p style="font-size: 13px; color: var(--text-secondary);">Yesterday, 4:45 PM</p>
              </div>
            </div>
            
            <div class="activity-item" style="display: flex; align-items: center; padding: 12px 0; border-bottom: 1px solid #f5f5f7;">
              <div style="width: 40px; height: 40px; background: rgba(51, 51, 51, 0.1); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                <i class="fas fa-user" style="color: var(--primary-color);"></i>
              </div>
              <div style="flex-grow: 1;">
                <p style="font-size: 14px; font-weight: 500; margin-bottom: 4px;">Alex updated dashboard settings</p>
                <p style="font-size: 13px; color: var(--text-secondary);">Yesterday, 2:30 PM</p>
              </div>
            </div>
            
            <div class="activity-item" style="display: flex; align-items: center; padding: 12px 0;">
              <div style="width: 40px; height: 40px; background: rgba(51, 51, 51, 0.1); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                <i class="fas fa-globe" style="color: var(--primary-color);"></i>
              </div>
              <div style="flex-grow: 1;">
                <p style="font-size: 14px; font-weight: 500; margin-bottom: 4px;">New domain added to monitoring</p>
                <p style="font-size: 13px; color: var(--text-secondary);">2 days ago, 11:15 AM</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Inclusion de Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Pie Chart for Traffic Sources
    const ctxPie = document.getElementById('visitsChart').getContext('2d');
    const pieData = {
      labels: ['Human', 'AI Bot'],
      datasets: [{
        data: [65, 35],
        backgroundColor: ['#333333', '#86868b'],
        borderWidth: 0
      }]
    };
    
    new Chart(ctxPie, {
      type: 'pie',
      data: pieData,
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'bottom',
          },
          title: {
            display: false
          }
        }
      }
    });
    
    // Line Chart for Traffic Overview
    const ctxLine = document.getElementById('trafficChart').getContext('2d');
    const lineData = {
      labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
      datasets: [
        {
          label: 'Human Visits',
          data: [4200, 4500, 5100, 5400, 6100, 6700, 7200, 7800, 8100, 8400, 8700, 9100],
          borderColor: '#333333',
          backgroundColor: 'rgba(51, 51, 51, 0.1)',
          tension: 0.4,
          fill: true
        },
        {
          label: 'AI Bot Visits',
          data: [1800, 2100, 2400, 2700, 3000, 3200, 3500, 3700, 3900, 4100, 4300, 4500],
          borderColor: '#86868b',
          backgroundColor: 'rgba(134, 134, 139, 0.1)',
          tension: 0.4,
          fill: true
        }
      ]
    };
    
    new Chart(ctxLine, {
      type: 'line',
      data: lineData,
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            }
          },
          x: {
            grid: {
              display: false
            }
          }
        }
      }
    });
  });
</script>
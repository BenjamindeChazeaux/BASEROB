<div class="dashboard-container">
  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Header -->
    <header class="dashboard-header">
      <div class="date-welcome">
        <p class="date"><%= Date.today.strftime("%-d %B, %Y") %></p>
        <h1>AI Analytics</h1>
      </div>
      <div class="header-actions" style="display: flex; align-items: center; gap: 16px; margin-top: 20px;">
        <div class="search-bar main-search" style="flex-grow: 1;">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Search for metrics, reports, data sources...">

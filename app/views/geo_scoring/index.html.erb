<div class="dashboard-container">
  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Header -->
    <header class="dashboard-header">
      <div class="date-welcome">
        <p class="date"><%= Date.today.strftime("%-d %B, %Y") %></p>
        <h1>GEO Scoring</h1>
      </div>
      
      <!-- Filters Bar -->
      <div class="filters-bar" style="display: flex; gap: 16px; margin-top: 20px; align-items: center;">
        <div class="filter-group" style="display: flex; align-items: center; gap: 24px;">
          <div class="filter-item">
            <label style="font-size: 13px; color: var(--text-secondary); margin-bottom: 4px; display: block;">Region:</label>
            <select class="filter-select" style="padding: 8px 12px; border-radius: 8px; border: 1px solid var(--card-border); background: white; min-width: 150px;">
              <option>All Regions</option>
              <option>Europe</option>
              <option>North America</option>
              <option>Asia</option>
            </select>
          </div>
          <div class="filter-item">
            <label style="font-size: 13px; color: var(--text-secondary); margin-bottom: 4px; display: block;">Time Range:</label>
            <select class="filter-select" style="padding: 8px 12px; border-radius: 8px; border: 1px solid var(--card-border); background: white; min-width: 150px;">
              <option>Last 30 Days</option>
              <option>Last 7 Days</option>
              <option>Last 24 Hours</option>
            </select>
          </div>
          <div class="filter-item">
            <label style="font-size: 13px; color: var(--text-secondary); margin-bottom: 4px; display: block;">Aggregation:</label>
            <select class="filter-select" style="padding: 8px 12px; border-radius: 8px; border: 1px solid var(--card-border); background: white; min-width: 150px;">
              <option>1 Hour</option>
              <option>1 Day</option>
              <option>1 Week</option>
            </select>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Dashboard Content -->
    <div class="dashboard-content" style="margin-top: 30px;">
      <!-- Performance Metrics -->
      <div class="metrics-row" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 16px; margin-bottom: 24px;">
        <div class="metric-card" style="background: white; border-radius: 12px; padding: 20px; box-shadow: var(--card-shadow);">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
            <h3 style="font-size: 14px; color: var(--text-secondary); font-weight: 500;">Visibility Score</h3>
            <div style="background: rgba(51, 51, 51, 0.1); width: 32px; height: 32px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-eye" style="color: var(--primary-color);"></i>
            </div>
          </div>
          <div style="display: flex; align-items: baseline;">
            <span style="font-size: 24px; font-weight: 600; color: var(--text-primary);">87.3%</span>
            <span style="margin-left: 8px; font-size: 13px; color: #F44336; display: flex; align-items: center;">
              <i class="fas fa-arrow-down" style="font-size: 10px; margin-right: 4px;"></i>0.2%
            </span>
          </div>
          <p style="font-size: 13px; color: var(--text-secondary); margin-top: 4px;">Overall Brand Visibility</p>
        </div>

        <div class="metric-card" style="background: white; border-radius: 12px; padding: 20px; box-shadow: var(--card-shadow);">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
            <h3 style="font-size: 14px; color: var(--text-secondary); font-weight: 500;">Average Position</h3>
            <div style="background: rgba(51, 51, 51, 0.1); width: 32px; height: 32px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-chart-line" style="color: var(--primary-color);"></i>
            </div>
          </div>
          <div style="display: flex; align-items: baseline;">
            <span style="font-size: 24px; font-weight: 600; color: var(--text-primary);">#1.4</span>
            <span style="margin-left: 8px; font-size: 13px; color: #F44336; display: flex; align-items: center;">
              <i class="fas fa-arrow-down" style="font-size: 10px; margin-right: 4px;"></i>0.2%
            </span>
          </div>
          <p style="font-size: 13px; color: var(--text-secondary); margin-top: 4px;">Average ranking in timeframe</p>
        </div>

        <div class="metric-card" style="background: white; border-radius: 12px; padding: 20px; box-shadow: var(--card-shadow);">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
            <h3 style="font-size: 14px; color: var(--text-secondary); font-weight: 500;">Detection Rate</h3>
            <div style="background: rgba(51, 51, 51, 0.1); width: 32px; height: 32px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-radar" style="color: var(--primary-color);"></i>
            </div>
          </div>
          <div style="display: flex; align-items: baseline;">
            <span style="font-size: 24px; font-weight: 600; color: var(--text-primary);">88.7%</span>
            <span style="margin-left: 8px; font-size: 13px; color: #4CAF50; display: flex; align-items: center;">
              <i class="fas fa-arrow-up" style="font-size: 10px; margin-right: 4px;"></i>0.5%
            </span>
          </div>
          <p style="font-size: 13px; color: var(--text-secondary); margin-top: 4px;">% of tests where rank was found</p>
        </div>

        <div class="metric-card" style="background: white; border-radius: 12px; padding: 20px; box-shadow: var(--card-shadow);">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px;">
            <h3 style="font-size: 14px; color: var(--text-secondary); font-weight: 500;">Top 3 Visibility</h3>
            <div style="background: rgba(51, 51, 51, 0.1); width: 32px; height: 32px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-trophy" style="color: var(--primary-color);"></i>
            </div>
          </div>
          <div style="display: flex; align-items: baseline;">
            <span style="font-size: 24px; font-weight: 600; color: var(--text-primary);">84.7%</span>
            <span style="margin-left: 8px; font-size: 13px; color: #F44336; display: flex; align-items: center;">
              <i class="fas fa-arrow-down" style="font-size: 10px; margin-right: 4px;"></i>0.1%
            </span>
          </div>
          <p style="font-size: 13px; color: var(--text-secondary); margin-top: 4px;">% of time ranked in top 3</p>
        </div>
      </div>

      <!-- Performance Chart -->
      <div class="chart-container" style="background: white; border-radius: 12px; padding: 24px; margin-bottom: 24px; box-shadow: var(--card-shadow);">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
          <h2 style="font-size: 16px; font-weight: 600;">Performance Over Time</h2>
          <select class="metric-select" style="padding: 8px 12px; border-radius: 8px; border: 1px solid var(--card-border); background: white;">
            <option>Visibility Score</option>
            <option>Average Position</option>
            <option>Detection Rate</option>
          </select>
        </div>
        <canvas id="performanceChart" height="300"></canvas>
      </div>

      <!-- Competitors Table -->
      <div class="competitors-table" style="background: white; border-radius: 12px; padding: 24px; box-shadow: var(--card-shadow);">
        <h2 style="font-size: 16px; font-weight: 600; margin-bottom: 20px;">Competitor Analysis</h2>
        <table style="width: 100%; border-collapse: collapse;">
          <thead>
            <tr style="border-bottom: 1px solid var(--card-border);">
              <th style="text-align: left; padding: 12px 16px; font-size: 13px; color: var(--text-secondary);">Competitor</th>
              <th style="text-align: right; padding: 12px 16px; font-size: 13px; color: var(--text-secondary);">Visibility Score</th>
              <th style="text-align: right; padding: 12px 16px; font-size: 13px; color: var(--text-secondary);">Change</th>
            </tr>
          </thead>
          <tbody>
            <tr style="border-bottom: 1px solid var(--card-border);">
              <td style="padding: 12px 16px;">Your Company</td>
              <td style="text-align: right; font-weight: 600;">87.3%</td>
              <td style="text-align: right; color: #F44336;">-0.2%</td>
            </tr>
            <tr style="border-bottom: 1px solid var(--card-border);">
              <td style="padding: 12px 16px;">Competitor A</td>
              <td style="text-align: right; font-weight: 600;">95.2%</td>
              <td style="text-align: right; color: #4CAF50;">+0.5%</td>
            </tr>
            <tr style="border-bottom: 1px solid var(--card-border);">
              <td style="padding: 12px 16px;">Competitor B</td>
              <td style="text-align: right; font-weight: 600;">90.9%</td>
              <td style="text-align: right;">0.0%</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const ctx = document.getElementById('performanceChart').getContext('2d');
  
  const data = {
    labels: Array.from({length: 12}, (_, i) => `8/1/2025`),
    datasets: [
      {
        label: 'Your Company',
        data: [87.3, 87.1, 86.9, 87.2, 87.4, 87.1, 86.8, 86.9, 87.0, 87.2, 87.3, 87.1],
        borderColor: '#333333',
        backgroundColor: 'rgba(51, 51, 51, 0.1)',
        tension: 0.4,
        fill: true
      },
      {
        label: 'Competitor A',
        data: [95.0, 95.1, 95.2, 95.1, 95.3, 95.2, 95.1, 95.2, 95.3, 95.2, 95.1, 95.2],
        borderColor: '#86868b',
        backgroundColor: 'rgba(134, 134, 139, 0.1)',
        tension: 0.4,
        fill: true
      }
    ]
  };

  new Chart(ctx, {
    type: 'line',
    data: data,
    options: {
      responsive: true,
      plugins: {
        legend: {
          position: 'top',
        }
      },
      scales: {
        y: {
          beginAtZero: false,
          min: 60,
          max: 100,
          grid: {
            color: 'rgba(0, 0, 0, 0.05)'
          }
        },
        x: {
          grid: {
            display: false
          }
        }
      }
    }
  });
});
</script>

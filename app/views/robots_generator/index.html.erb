<div class="dashboard-container">
  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>

  <!-- Main Content -->
  <div class="main-content">
    <header class="dashboard-header">
      <div class="header-top">
        <div class="welcome-text">
          <h1>Robots Generator</h1>
          <p>Create and optimize robots.txt files for your website</p>
        </div>
      </div>
    </header>

    <section class="dashboard-content">
      <div class="card">
        <div class="card-header">
          <h2>Generate robots.txt</h2>
        </div>
        <div class="card-body">
          <p>Use this tool to generate a robots.txt file optimized for search engines and AI crawlers.</p>
          
          <form class="form mt-4">
            <div class="form-group">
              <label for="website-url">Website URL</label>
              <input type="url" id="website-url" class="form-control" placeholder="https://example.com">
            </div>
            
            <div class="form-group">
              <label>Crawler Access</label>
              <div class="checkbox-group">
                <div class="form-check">
                  <input type="checkbox" id="allow-google" class="form-check-input" checked>
                  <label for="allow-google">Allow Google</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" id="allow-bing" class="form-check-input" checked>
                  <label for="allow-bing">Allow Bing</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" id="allow-ai" class="form-check-input" checked>
                  <label for="allow-ai">Allow AI Crawlers</label>
                </div>
              </div>
            </div>
            
            <button type="submit" class="btn-primary">Generate robots.txt</button>
          </form>
        </div>
      </div>
    </section>
  </div>
</div> 